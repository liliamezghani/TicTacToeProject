<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Titre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"/>

    <!-- Bouton Jouer -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_jouer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Jouer"
        android:background="@drawable/bg_button_blue"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"/>

    <!-- Bouton Principe -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_principe"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Principe Du Jeu"
        android:background="@drawable/bg_button_dark"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginBottom="30dp"/>

    <!-- Choix du symbole -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_input_gray"
        android:padding="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choisir votre symbole:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"/>

        <RadioGroup
            android:id="@+id/radioGroupSymbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rb_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="20sp"
                android:textStyle="bold"
                android:checked="true"
                android:layout_marginEnd="50dp"/>

            <RadioButton
                android:id="@+id/rb_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </RadioGroup>
    </LinearLayout>

    <!-- Choix nombre parties -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_input_gray"
        android:padding="10dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="le nombre de parties du tournoi"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <Spinner
            android:id="@+id/spinner_nb_parties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:entries="@array/nb_parties_array"
            android:minHeight="48dp"/>
    </LinearLayout>

    <!-- Bouton Retrouver Scores -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_scores"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_dark"
        android:gravity="center"
        android:text="Retrouver les scores\ndu dernier tournoi"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>